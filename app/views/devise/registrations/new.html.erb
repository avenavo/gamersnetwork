
 
  <%= devise_error_messages! %>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: 'form', class: 'login'}) do |f| %>
  <h3 class='roboto-font'>Register</h3>
  <%= f.text_field :username, autofocus: true, placeholder: 'Username' %>
  <i class='fa fa-user'></i>

  <%= f.email_field :email, autofocus: true, placeholder: 'E-mail' %>
  <i class='fa fa-envelope-o'></i>

  <%= f.password_field :password, placeholder: 'Password' %>
  <i class='fa fa-key'></i>

  <%= f.password_field :password_confirmation, placeholder: 'Password confirmation' %>
  <i class='fa fa-key'></i>

  <%= button_tag(type: 'submit') do %>
    <i class='spinner'></i>
    <span class="state">Register</span>   
  <% end %>
  
  <% end %>
